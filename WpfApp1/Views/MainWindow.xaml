<!-- WpfApp1/Views/MainWindow.xaml -->
<Window x:Class="WpfApp1.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AIDY"
        Width="1100" Height="650"
        MinWidth="900" MinHeight="560"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowState="Normal"
        AllowsTransparency="True"
        Background="Transparent">


    <!-- =========================
         RING STORYBOARDS (full)
         ========================= -->
    <Window.Resources>

        <!-- IDLE / READY -->
        <Storyboard x:Key="SB_Ring_Idle" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetName="RingStop1" Storyboard.TargetProperty="Color" To="#6BD6FF" Duration="0:0:0.5"/>
            <ColorAnimation Storyboard.TargetName="RingStop2" Storyboard.TargetProperty="Color" To="#8A6BFF" Duration="0:0:0.5"/>
            <ColorAnimation Storyboard.TargetName="RingStop3" Storyboard.TargetProperty="Color" To="#6BD6FF" Duration="0:0:0.5"/>

            <DoubleAnimation Storyboard.TargetName="RingScale" Storyboard.TargetProperty="ScaleX"
                             From="1.00" To="1.04" Duration="0:0:2.8" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="RingScale" Storyboard.TargetProperty="ScaleY"
                             From="1.00" To="1.04" Duration="0:0:2.8" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <DoubleAnimation Storyboard.TargetName="NeonRing" Storyboard.TargetProperty="Opacity"
                             From="0.90" To="1.00" Duration="0:0:2.8" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <DoubleAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="Opacity"
                             From="0.18" To="0.26" Duration="0:0:2.8" AutoReverse="True" RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="BlurRadius"
                             From="20" To="26" Duration="0:0:2.8" AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>

        <!-- LISTENING -->
        <Storyboard x:Key="SB_Ring_Listening" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetName="RingStop1" Storyboard.TargetProperty="Color" To="#4CC3FF" Duration="0:0:0.25"/>
            <ColorAnimation Storyboard.TargetName="RingStop2" Storyboard.TargetProperty="Color" To="#3E7BFF" Duration="0:0:0.25"/>
            <ColorAnimation Storyboard.TargetName="RingStop3" Storyboard.TargetProperty="Color" To="#4CC3FF" Duration="0:0:0.25"/>

            <DoubleAnimation Storyboard.TargetName="RingScale" Storyboard.TargetProperty="ScaleX"
                             From="1.00" To="1.06" Duration="0:0:1.25" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="RingScale" Storyboard.TargetProperty="ScaleY"
                             From="1.00" To="1.06" Duration="0:0:1.25" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <DoubleAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="Opacity"
                             From="0.25" To="0.42" Duration="0:0:1.25" AutoReverse="True" RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="BlurRadius"
                             From="22" To="34" Duration="0:0:1.25" AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>

        <!-- PROCESSING -->
        <Storyboard x:Key="SB_Ring_Processing" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetName="RingStop1" Storyboard.TargetProperty="Color" To="#7A6CFF" Duration="0:0:0.35"/>
            <ColorAnimation Storyboard.TargetName="RingStop2" Storyboard.TargetProperty="Color" To="#B05CFF" Duration="0:0:0.35"/>
            <ColorAnimation Storyboard.TargetName="RingStop3" Storyboard.TargetProperty="Color" To="#7A6CFF" Duration="0:0:0.35"/>

            <DoubleAnimation Storyboard.TargetName="RingGradientRotate" Storyboard.TargetProperty="Angle"
                             From="0" To="360" Duration="0:0:7" RepeatBehavior="Forever"/>

            <DoubleAnimation Storyboard.TargetName="RingScale" Storyboard.TargetProperty="ScaleX"
                             From="1.00" To="1.03" Duration="0:0:2.4" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="RingScale" Storyboard.TargetProperty="ScaleY"
                             From="1.00" To="1.03" Duration="0:0:2.4" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <DoubleAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="Opacity"
                             From="0.20" To="0.28" Duration="0:0:2.4" AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>

        <!-- SPEAKING -->
        <Storyboard x:Key="SB_Ring_Speaking" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetName="RingStop1" Storyboard.TargetProperty="Color" To="#B85CFF" Duration="0:0:0.25"/>
            <ColorAnimation Storyboard.TargetName="RingStop2" Storyboard.TargetProperty="Color" To="#FF4FB8" Duration="0:0:0.25"/>
            <ColorAnimation Storyboard.TargetName="RingStop3" Storyboard.TargetProperty="Color" To="#B85CFF" Duration="0:0:0.25"/>

            <DoubleAnimation Storyboard.TargetName="RingScale" Storyboard.TargetProperty="ScaleX"
                             From="1.00" To="1.05" Duration="0:0:1.4" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="RingScale" Storyboard.TargetProperty="ScaleY"
                             From="1.00" To="1.05" Duration="0:0:1.4" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <ColorAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="Color" To="#FF4FB8" Duration="0:0:0.25"/>
            <DoubleAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="Opacity"
                             From="0.28" To="0.55" Duration="0:0:1.4" AutoReverse="True" RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="BlurRadius"
                             From="26" To="44" Duration="0:0:1.4" AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>

        <!-- EXECUTING -->
        <Storyboard x:Key="SB_Ring_Executing" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetName="RingStop1" Storyboard.TargetProperty="Color" To="#4CC3FF" Duration="0:0:0.2"/>
            <ColorAnimation Storyboard.TargetName="RingStop2" Storyboard.TargetProperty="Color" To="#39FFB0" Duration="0:0:0.2"/>
            <ColorAnimation Storyboard.TargetName="RingStop3" Storyboard.TargetProperty="Color" To="#4CC3FF" Duration="0:0:0.2"/>

            <DoubleAnimation Storyboard.TargetName="RingScale" Storyboard.TargetProperty="ScaleX"
                             From="1.00" To="1.08" Duration="0:0:0.9" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="RingScale" Storyboard.TargetProperty="ScaleY"
                             From="1.00" To="1.08" Duration="0:0:0.9" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <ColorAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="Color" To="#39FFB0" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="Opacity"
                             From="0.30" To="0.60" Duration="0:0:0.9" AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>

        <!-- SUCCESS (one ping then code-behind returns to Idle) -->
        <Storyboard x:Key="SB_Ring_Success">
            <ColorAnimation Storyboard.TargetName="RingStop1" Storyboard.TargetProperty="Color" To="#36E58C" Duration="0:0:0.12"/>
            <ColorAnimation Storyboard.TargetName="RingStop2" Storyboard.TargetProperty="Color" To="#36E58C" Duration="0:0:0.12"/>
            <ColorAnimation Storyboard.TargetName="RingStop3" Storyboard.TargetProperty="Color" To="#36E58C" Duration="0:0:0.12"/>

            <ColorAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="Color" To="#36E58C" Duration="0:0:0.12"/>
            <DoubleAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="Opacity" From="0.25" To="0.75" Duration="0:0:0.18" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="BlurRadius" From="22" To="52" Duration="0:0:0.18" AutoReverse="True"/>

            <DoubleAnimation Storyboard.TargetName="RingScale" Storyboard.TargetProperty="ScaleX" From="1.00" To="1.10" Duration="0:0:0.18" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="RingScale" Storyboard.TargetProperty="ScaleY" From="1.00" To="1.10" Duration="0:0:0.18" AutoReverse="True"/>
        </Storyboard>

        <!-- WARNING -->
        <Storyboard x:Key="SB_Ring_Warning" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetName="RingStop1" Storyboard.TargetProperty="Color" To="#FFB020" Duration="0:0:0.35"/>
            <ColorAnimation Storyboard.TargetName="RingStop2" Storyboard.TargetProperty="Color" To="#FFB020" Duration="0:0:0.35"/>
            <ColorAnimation Storyboard.TargetName="RingStop3" Storyboard.TargetProperty="Color" To="#FFB020" Duration="0:0:0.35"/>
            <ColorAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="Color" To="#FFB020" Duration="0:0:0.35"/>

            <DoubleAnimation Storyboard.TargetName="RingScale" Storyboard.TargetProperty="ScaleX" From="1.00" To="1.03" Duration="0:0:2.1" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="RingScale" Storyboard.TargetProperty="ScaleY" From="1.00" To="1.03" Duration="0:0:2.1" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <DoubleAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="Opacity" From="0.18" To="0.32" Duration="0:0:2.1" AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>

        <!-- ERROR -->
        <Storyboard x:Key="SB_Ring_Error">
            <ColorAnimation Storyboard.TargetName="RingStop1" Storyboard.TargetProperty="Color" To="#FF3B5C" Duration="0:0:0.15"/>
            <ColorAnimation Storyboard.TargetName="RingStop2" Storyboard.TargetProperty="Color" To="#FF2A2A" Duration="0:0:0.15"/>
            <ColorAnimation Storyboard.TargetName="RingStop3" Storyboard.TargetProperty="Color" To="#FF3B5C" Duration="0:0:0.15"/>
            <ColorAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="Color" To="#FF3B5C" Duration="0:0:0.15"/>
            <DoubleAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="Opacity" To="0.65" Duration="0:0:0.15"/>
            <DoubleAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="BlurRadius" To="46" Duration="0:0:0.15"/>

            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="RingScale" Storyboard.TargetProperty="ScaleX">
                <EasingDoubleKeyFrame KeyTime="0:0:0.00" Value="1.00"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.10" Value="1.10"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.20" Value="1.02"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.30" Value="1.12"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.40" Value="1.01"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.50" Value="1.10"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.62" Value="1.00"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="RingScale" Storyboard.TargetProperty="ScaleY">
                <EasingDoubleKeyFrame KeyTime="0:0:0.00" Value="1.00"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.10" Value="1.10"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.20" Value="1.02"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.30" Value="1.12"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.40" Value="1.01"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.50" Value="1.10"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.62" Value="1.00"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- OFFLINE -->
        <Storyboard x:Key="SB_Ring_Offline" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetName="RingStop1" Storyboard.TargetProperty="Color" To="#2B355A" Duration="0:0:0.4"/>
            <ColorAnimation Storyboard.TargetName="RingStop2" Storyboard.TargetProperty="Color" To="#2B355A" Duration="0:0:0.4"/>
            <ColorAnimation Storyboard.TargetName="RingStop3" Storyboard.TargetProperty="Color" To="#2B355A" Duration="0:0:0.4"/>
            <ColorAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="Color" To="#2B355A" Duration="0:0:0.4"/>

            <DoubleAnimation Storyboard.TargetName="NeonShadow" Storyboard.TargetProperty="Opacity" From="0.08" To="0.14" Duration="0:0:5" AutoReverse="True" RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="NeonRing" Storyboard.TargetProperty="Opacity" From="0.55" To="0.70" Duration="0:0:5" AutoReverse="True" RepeatBehavior="Forever"/>

            <DoubleAnimation Storyboard.TargetName="RingScale" Storyboard.TargetProperty="ScaleX" From="1.00" To="1.01" Duration="0:0:5" AutoReverse="True" RepeatBehavior="Forever"/>
            <DoubleAnimation Storyboard.TargetName="RingScale" Storyboard.TargetProperty="ScaleY" From="1.00" To="1.01" Duration="0:0:5" AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>

    </Window.Resources>

    <Grid x:Name="Root">
        <!-- ===== космос ===== -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#0B1022" Offset="0"/>
                    <GradientStop Color="#060710" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Stars -->
        <Canvas IsHitTestVisible="False" Opacity="0.95">
            <!-- white -->
            <Ellipse Width="2" Height="2" Fill="#35FFFFFF" Canvas.Left="120" Canvas.Top="120"/>
            <Ellipse Width="1" Height="1" Fill="#25FFFFFF" Canvas.Left="300" Canvas.Top="90"/>
            <Ellipse Width="2" Height="2" Fill="#20FFFFFF" Canvas.Left="610" Canvas.Top="160"/>
            <Ellipse Width="1" Height="1" Fill="#30FFFFFF" Canvas.Left="980" Canvas.Top="110"/>
            <Ellipse Width="2" Height="2" Fill="#18FFFFFF" Canvas.Left="1300" Canvas.Top="190"/>
            <Ellipse Width="1" Height="1" Fill="#22FFFFFF" Canvas.Left="1460" Canvas.Top="310"/>
            <Ellipse Width="2" Height="2" Fill="#28FFFFFF" Canvas.Left="220" Canvas.Top="520"/>
            <Ellipse Width="1" Height="1" Fill="#2AFFFFFF" Canvas.Left="760" Canvas.Top="640"/>
            <Ellipse Width="2" Height="2" Fill="#24FFFFFF" Canvas.Left="1040" Canvas.Top="720"/>
            <!-- cyan/violet -->
            <Ellipse Width="2" Height="2" Fill="#2A7CD9FF" Canvas.Left="420" Canvas.Top="260"/>
            <Ellipse Width="1" Height="1" Fill="#207CD9FF" Canvas.Left="860" Canvas.Top="260"/>
            <Ellipse Width="2" Height="2" Fill="#1F7CD9FF" Canvas.Left="1180" Canvas.Top="520"/>
            <Ellipse Width="2" Height="2" Fill="#25B46CFF" Canvas.Left="540" Canvas.Top="420"/>
            <Ellipse Width="1" Height="1" Fill="#20B46CFF" Canvas.Left="1260" Canvas.Top="360"/>
        </Canvas>

        <!-- Nebula -->
        <Canvas IsHitTestVisible="False">
            <Ellipse Width="920" Height="560" Canvas.Left="520" Canvas.Top="110" Opacity="0.16" Fill="#3A2D7A">
                <Ellipse.Effect>
                    <BlurEffect Radius="110"/>
                </Ellipse.Effect>
            </Ellipse>
            <Ellipse Width="820" Height="560" Canvas.Left="700" Canvas.Top="240" Opacity="0.12" Fill="#2148A8">
                <Ellipse.Effect>
                    <BlurEffect Radius="120"/>
                </Ellipse.Effect>
            </Ellipse>
        </Canvas>

        <!-- subtle grain -->
        <Rectangle IsHitTestVisible="False" Fill="{StaticResource NoiseBrush}" Opacity="0.35"/>

        <!-- ===== App Window (center) ===== -->
        <Viewbox Stretch="Uniform" StretchDirection="Both">
            <Grid Width="1536" Height="864">

                <Border Width="1413" Height="743"
                        CornerRadius="28"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{StaticResource WindowFill}"
                        BorderBrush="{StaticResource WindowBorder}"
                        BorderThickness="1"
                        Effect="{StaticResource WindowShadow}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="290"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- ===== Sidebar ===== -->
                        <Border Grid.Column="0"
                                CornerRadius="28,0,0,28"
                                Background="{StaticResource SidebarFill}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- divider -->
                                <Border BorderBrush="#269BB6FF" BorderThickness="0,0,1,0"/>

                                <!-- top: logo + AIDY -->
                                <StackPanel Grid.Row="0" Margin="24,28,24,0" Orientation="Horizontal">
                                    <Grid Width="44" Height="44" Effect="{StaticResource GlowLogo}">
                                        <Polygon Points="22,2 40,12 40,32 22,42 4,32 4,12"
                                                 Fill="#1A214E"
                                                 Stroke="{StaticResource AccentCyan}"
                                                 StrokeThickness="1"/>
                                        <Line X1="22" Y1="2" X2="22" Y2="42" Stroke="#40FFFFFF" StrokeThickness="1"/>
                                        <Line X1="4" Y1="12" X2="40" Y2="32" Stroke="#20FFFFFF" StrokeThickness="1"/>
                                        <Line X1="40" Y1="12" X2="4" Y2="32" Stroke="#20FFFFFF" StrokeThickness="1"/>
                                    </Grid>

                                    <TextBlock Text="AIDY"
                                               Margin="14,2,0,0"
                                               FontFamily="Segoe UI"
                                               FontWeight="SemiBold"
                                               FontSize="28"
                                               Foreground="{StaticResource TextPrimary}">
                                        <TextBlock.RenderTransform>
                                            <TranslateTransform Y="4"/>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                </StackPanel>

                                <!-- menu -->
                                <!-- menu -->
                                <StackPanel Grid.Row="1" Margin="24,32,24,0">

                                    <!-- AIDY -->
                                    <Button x:Name="BtnAidy"
            Style="{StaticResource MenuItemButton}"
            Background="#8C2B3C8A"
            BorderBrush="#2EA9C7FF"
            BorderThickness="1"
            Click="NavAidy_Click">
                                        <Grid Margin="16,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="22"/>
                                                <ColumnDefinition Width="14"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Ellipse Grid.Column="0" Width="20" Height="20"
                     Stroke="#CCFFFFFF" StrokeThickness="2" Opacity="0.85"/>
                                            <TextBlock Grid.Column="2" VerticalAlignment="Center"
                       Text="Aidy"
                       FontFamily="Segoe UI"
                       FontWeight="SemiBold"
                       FontSize="18"
                       Foreground="{StaticResource TextPrimary}"/>
                                        </Grid>
                                    </Button>

                                    <!-- COMMANDS -->
                                    <Button x:Name="BtnCommands"
            Style="{StaticResource MenuItemButton}"
            Click="NavCommands_Click">
                                        <Grid Margin="16,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="22"/>
                                                <ColumnDefinition Width="14"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Path Grid.Column="0"
                  Stroke="#CCFFFFFF"
                  StrokeThickness="2"
                  Opacity="0.8"
                  StrokeLineJoin="Round"
                  StrokeStartLineCap="Round"
                  StrokeEndLineCap="Round"
                  Data="M4,5 H18 M4,10 H18 M4,15 H14"/>

                                            <TextBlock Grid.Column="2"
                       VerticalAlignment="Center"
                       Text="Commands"
                       Style="{StaticResource MenuText}"/>
                                        </Grid>
                                    </Button>

                                    <!-- CONTACTS -->
                                    <Button x:Name="BtnContacts"
            Style="{StaticResource MenuItemButton}"
            Click="NavContacts_Click">
                                        <Grid Margin="16,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="22"/>
                                                <ColumnDefinition Width="14"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Path Grid.Column="0"
                  Stroke="#CCFFFFFF"
                  StrokeThickness="2"
                  Opacity="0.8"
                  StrokeLineJoin="Round"
                  StrokeStartLineCap="Round"
                  StrokeEndLineCap="Round"
                  Data="M10,2 A4,4 0 1 1 9.999,2 Z M2,18 C2,13.5 18,13.5 18,18"/>
                                            <TextBlock Grid.Column="2"
                       VerticalAlignment="Center"
                       Text="Contacts"
                       Style="{StaticResource MenuText}"/>
                                        </Grid>
                                    </Button>

                                    <!-- SETTINGS + SOON -->
                                    <Button x:Name="BtnSettings"
            Style="{StaticResource MenuItemButton}"
            Click="NavSettings_Click">
                                        <Grid Margin="16,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="22"/>
                                                <ColumnDefinition Width="14"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Path Grid.Column="0"
                  Stroke="#CCFFFFFF"
                  StrokeThickness="1.6"
                  Opacity="0.8"
                  StrokeLineJoin="Round"
                  StrokeStartLineCap="Round"
                  StrokeEndLineCap="Round"
                  Data="M10,2 L12,4 L15,4 L16,7 L18,9 L16,11 L15,14 L12,14 L10,16 L8,14 L5,14 L4,11 L2,9 L4,7 L5,4 L8,4 Z
                        M10,7 A3,3 0 1 1 9.999,7 Z"/>

                                            <TextBlock Grid.Column="2"
                       VerticalAlignment="Center"
                       Text="Settings"
                       Style="{StaticResource MenuText}"/>

                                            <Border Grid.Column="3"
                    VerticalAlignment="Center"
                    CornerRadius="10"
                    Background="#18FFFFFF"
                    BorderBrush="#25FFFFFF"
                    BorderThickness="1"
                    Padding="8,2"
                    Margin="10,0,0,0">
                                                <TextBlock Text="SOON…"
                           FontFamily="Segoe UI"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="#CCFFFFFF"
                           Opacity="0.75"/>
                                            </Border>
                                        </Grid>
                                    </Button>

                                </StackPanel>
                                <!-- bottom status -->
                                <StackPanel Grid.Row="3" Margin="24,0,24,24">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <Ellipse Width="10" Height="10"
                                                 Fill="{StaticResource OnlineGreen}"
                                                 Effect="{StaticResource GlowGreen}"/>
                                        <TextBlock Text="ONLINE" Margin="10,0,0,0"
                                                   FontFamily="Segoe UI"
                                                   FontSize="14"
                                                   Foreground="#CCFfFFE0"/>
                                    </StackPanel>
                                    <TextBlock Text="Analytics Shell"
                                               FontFamily="Segoe UI"
                                               FontSize="13"
                                               Foreground="{StaticResource TextMuted}"/>
                                </StackPanel>

                            </Grid>
                        </Border>

                        <!-- ===== Main ===== -->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="64"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Title bar -->
                            <Grid Grid.Row="0"
                                  Background="Transparent"
                                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">

                                <Rectangle Height="64" VerticalAlignment="Top">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Color="#10FFFFFF" Offset="0"/>
                                            <GradientStop Color="#00FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,24,0">
                                    <Button Style="{StaticResource ChromeButton}" Click="Minimize_Click">
                                        <TextBlock Text="—" FontSize="18" FontWeight="SemiBold" Opacity="0.7" Foreground="White"/>
                                    </Button>
                                    <Border Width="14"/>
                                    <Button Style="{StaticResource ChromeButton}" Click="Maximize_Click">
                                        <TextBlock Text="□" FontSize="14" FontWeight="SemiBold" Opacity="0.7" Foreground="White"/>
                                    </Button>
                                    <Border Width="14"/>
                                    <Button Style="{StaticResource ChromeButton}" Click="Close_Click">
                                        <TextBlock Text="×" FontSize="20" FontWeight="SemiBold" Opacity="0.7" Foreground="White"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                            <!-- Content -->
                            <Grid Grid.Row="1">

                                <!-- ===== AIDY PAGE ===== -->
                                <Grid x:Name="AidyPage" Visibility="Visible">

                                    <!-- header (BOUND) -->
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,42,0,0">
                                        <TextBlock Text="{Binding StatusText}"
                       Style="{StaticResource H1}"
                       HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding LastCommand}"
           FontSize="16"
           Opacity="0.82"
           Margin="0,8,0,0"
           HorizontalAlignment="Center"
           Foreground="{StaticResource TextMuted}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>

                                                        <!-- hide when empty -->
                                                        <Trigger Property="Text" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </Trigger>

                                                        <!-- hide internal command -->
                                                        <Trigger Property="Text" Value="exit">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </Trigger>

                                                        <!-- optional: hide "cancel" too -->
                                                        <Trigger Property="Text" Value="cancel">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </Trigger>

                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                    </StackPanel>

                                    <!-- ===== Listening Orb ===== -->
                                    <Grid HorizontalAlignment="Center"
              VerticalAlignment="Top"
              Margin="0,140,0,0">
                                        <Grid Width="520" Height="520">

                                            <!-- outer glow pulse -->
                                            <Ellipse x:Name="OuterGlow" Width="520" Height="520">
                                                <Ellipse.Fill>
                                                    <RadialGradientBrush>
                                                        <GradientStop Color="#2E7C5CFF" Offset="0"/>
                                                        <GradientStop Color="#007C5CFF" Offset="1"/>
                                                    </RadialGradientBrush>
                                                </Ellipse.Fill>
                                                <Ellipse.RenderTransform>
                                                    <ScaleTransform x:Name="OuterGlowScale"
                            CenterX="260" CenterY="260"
                            ScaleX="1" ScaleY="1"/>
                                                </Ellipse.RenderTransform>
                                            </Ellipse>

                                            <!-- ring group (ROTATES) -->
                                            <Grid>
                                                <Grid.RenderTransform>
                                                    <RotateTransform x:Name="RingRotate" CenterX="260" CenterY="260" Angle="0"/>
                                                </Grid.RenderTransform>

                                                <!-- neon ring (STATE-driven) -->
                                                <Ellipse x:Name="NeonRing"
                 Width="360" Height="360"
                 StrokeThickness="12"
                 Opacity="0.95"
                 RenderTransformOrigin="0.5,0.5">
                                                    <Ellipse.RenderTransform>
                                                        <ScaleTransform x:Name="RingScale" ScaleX="1" ScaleY="1"/>
                                                    </Ellipse.RenderTransform>

                                                    <Ellipse.Stroke>
                                                        <LinearGradientBrush x:Name="RingGradient" StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop x:Name="RingStop1" Color="#6BE7FF" Offset="0"/>
                                                            <GradientStop x:Name="RingStop2" Color="#7C5CFF" Offset="0.55"/>
                                                            <GradientStop x:Name="RingStop3" Color="#6BE7FF" Offset="1"/>

                                                            <LinearGradientBrush.RelativeTransform>
                                                                <RotateTransform x:Name="RingGradientRotate" CenterX="0.5" CenterY="0.5" Angle="0"/>
                                                            </LinearGradientBrush.RelativeTransform>
                                                        </LinearGradientBrush>
                                                    </Ellipse.Stroke>

                                                    <Ellipse.Effect>
                                                        <DropShadowEffect x:Name="NeonShadow"
                                  Color="#6BE7FF"
                                  Opacity="0.22"
                                  BlurRadius="22"
                                  ShadowDepth="0"/>
                                                    </Ellipse.Effect>
                                                </Ellipse>

                                                <!-- extra subtle glows -->
                                                <Ellipse Width="360" Height="360" StrokeThickness="10" Stroke="#30FF58B8" Effect="{StaticResource GlowPink}"/>
                                                <Ellipse Width="360" Height="360" StrokeThickness="10" Stroke="#207C5CFF" Effect="{StaticResource GlowViolet}"/>
                                            </Grid>
                                            <!-- ✅ ring group closed -->

                                            <!-- inner ring (STATIC) -->
                                            <Ellipse Width="310" Height="310" StrokeThickness="7" Stroke="#26FFFFFF"/>

                                            <!-- center disk (STATIC) -->
                                            <Ellipse Width="270" Height="270" StrokeThickness="1" Stroke="#2EA9C7FF" Fill="#A60B0D18">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect Color="Black" Opacity="0.35" BlurRadius="28" ShadowDepth="0"/>
                                                </Ellipse.Effect>
                                            </Ellipse>

                                            <!-- waveform (STATIC) -->
                                            <Grid x:Name="Wave"
          Width="170" Height="64"
          HorizontalAlignment="Center"
          VerticalAlignment="Center">
                                                <Grid.RenderTransform>
                                                    <ScaleTransform x:Name="WaveScale" CenterX="85" CenterY="32" ScaleX="1" ScaleY="1"/>
                                                </Grid.RenderTransform>

                                                <Grid.Resources>
                                                    <LinearGradientBrush x:Key="WaveBrush" StartPoint="0,0.5" EndPoint="1,0.5">
                                                        <GradientStop Color="#7C5CFF" Offset="0"/>
                                                        <GradientStop Color="#6BE7FF" Offset="0.5"/>
                                                        <GradientStop Color="#FF58B8" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Grid.Resources>

                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <Rectangle Width="8" Height="18" RadiusX="3" RadiusY="3" Fill="{StaticResource WaveBrush}" Margin="4,0"/>
                                                    <Rectangle Width="8" Height="34" RadiusX="3" RadiusY="3" Fill="{StaticResource WaveBrush}" Margin="4,0"/>
                                                    <Rectangle Width="8" Height="54" RadiusX="3" RadiusY="3" Fill="{StaticResource WaveBrush}" Margin="4,0"/>
                                                    <Rectangle Width="8" Height="40" RadiusX="3" RadiusY="3" Fill="{StaticResource WaveBrush}" Margin="4,0"/>
                                                    <Rectangle Width="8" Height="24" RadiusX="3" RadiusY="3" Fill="{StaticResource WaveBrush}" Margin="4,0"/>
                                                    <Rectangle Width="8" Height="42" RadiusX="3" RadiusY="3" Fill="{StaticResource WaveBrush}" Margin="4,0"/>
                                                    <Rectangle Width="8" Height="28" RadiusX="3" RadiusY="3" Fill="{StaticResource WaveBrush}" Margin="4,0"/>
                                                </StackPanel>

                                                <Grid.Effect>
                                                    <DropShadowEffect Color="#6BE7FF" Opacity="0.18" BlurRadius="12" ShadowDepth="0"/>
                                                </Grid.Effect>
                                            </Grid>
                                            <!-- это закрывает Grid x:Name="Wave" -->

                                        </Grid>

                                        </Grid>
                                    </Grid>

                                
                                <!-- ===== COMMANDS PAGE ===== -->
                                <!-- ===== COMMANDS PAGE ===== -->
                                <Grid x:Name="CommandsPage" Visibility="Collapsed" Margin="48,36,48,36">
                                    <Border CornerRadius="22"
            Background="#0EFFFFFF"
            BorderBrush="#22FFFFFF"
            BorderThickness="1"
            Padding="26">

                                        <StackPanel>

                                            <TextBlock Text="AIDY BETA"
                       FontFamily="Segoe UI"
                       FontWeight="SemiBold"
                       FontSize="28"
                       Foreground="{StaticResource TextPrimary}"
                       Margin="0,0,0,6"/>

                                            <TextBlock Text="What can AIDY do now:"
                       FontSize="16"
                       Opacity="0.82"
                       Foreground="{StaticResource TextMuted}"
                       Margin="0,0,0,18"/>

                                            <!-- Core / Offline -->
                                            <TextBlock Text="CORE (offline):"
                       Foreground="{StaticResource TextMuted}"
                       FontSize="13"
                       Opacity="0.9"
                       Margin="0,0,0,6"/>

                                            <TextBlock Text="• Wake word: “aidy / hey aidy / ok aidy / …”"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="15" Opacity="0.92" Margin="0,2,0,0"/>
                                            <TextBlock Text="• Offline command capture (Vosk grammar + VAD stop)"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="15" Opacity="0.92" Margin="0,2,0,0"/>
                                            <TextBlock Text="• Voice replies: MP3 (Assets/voice/*.mp3) → fallback TTS"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="15" Opacity="0.92" Margin="0,2,0,0"/>
                                            <TextBlock Text="• UI states: Idle / Listening / Processing / Speaking / Executing / Success / Warning / Error / Offline"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="15" Opacity="0.92" Margin="0,2,0,0"/>

                                            <Border Height="14" Background="Transparent"/>

                                            <!-- System -->
                                            <TextBlock Text="SYSTEM:"
                       Foreground="{StaticResource TextMuted}"
                       FontSize="13"
                       Opacity="0.9"
                       Margin="0,0,0,6"/>

                                            <TextBlock Text="• Volume up / volume down (steps) — e.g. “volume up 6”"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="15" Opacity="0.92" Margin="0,2,0,0"/>
                                            <TextBlock Text="• Set volume percent (optional pycaw) — e.g. “volume to 35%”"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="15" Opacity="0.92" Margin="0,2,0,0"/>
                                            <TextBlock Text="• Brightness up / brightness down"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="15" Opacity="0.92" Margin="0,2,0,0"/>
                                            <TextBlock Text="• Lock screen — “lock”"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="15" Opacity="0.92" Margin="0,2,0,0"/>
                                            <TextBlock Text="• Shutdown / Restart (5s timer)"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="15" Opacity="0.92" Margin="0,2,0,0"/>
                                            <TextBlock Text="• Open Command Prompt — “open cmd”"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="15" Opacity="0.92" Margin="0,2,0,0"/>
                                            <TextBlock Text="• Show desktop — “show desktop”"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="15" Opacity="0.92" Margin="0,2,0,0"/>
                                            <TextBlock Text="• Screenshot — “screenshot” (Win+PrtSc)"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="15" Opacity="0.92" Margin="0,2,0,0"/>
                                            <TextBlock Text="• Task Manager — “task manager”"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="15" Opacity="0.92" Margin="0,2,0,0"/>

                                            <Border Height="14" Background="Transparent"/>

                                            <!-- Apps -->
                                            <TextBlock Text="APPS (apps.json):"
                       Foreground="{StaticResource TextMuted}"
                       FontSize="13"
                       Opacity="0.9"
                       Margin="0,0,0,6"/>

                                            <TextBlock Text="• Open app — “open chrome / open telegram / …”"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="15" Opacity="0.92" Margin="0,2,0,0"/>
                                            <TextBlock Text="• Close app — “close chrome / close telegram / …” (taskkill by process/id)"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="15" Opacity="0.92" Margin="0,2,0,0"/>

                                            <TextBlock Text="Available apps now: Chrome, Opera, Yandex Browser, Yandex Music, Telegram, Discord, Spotify, Explorer, Settings, Calculator, Notepad, Task Manager, VS Code, Steam"
                       Foreground="{StaticResource TextMuted}"
                       FontSize="14"
                       Opacity="0.9"
                       Margin="0,8,0,0"
                       TextWrapping="Wrap"/>

                                            <Border Height="14" Background="Transparent"/>

                                            <!-- Window switch -->
                                            <TextBlock Text="WINDOW SWITCH MODE:"
                       Foreground="{StaticResource TextMuted}"
                       FontSize="13"
                       Opacity="0.9"
                       Margin="0,0,0,6"/>

                                            <TextBlock Text="• “switch window / switch app” → holds Alt + Tab"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="15" Opacity="0.92" Margin="0,2,0,0"/>
                                            <TextBlock Text="• Then say: “left / right” to move, “done” to select, “cancel” to exit"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="15" Opacity="0.92" Margin="0,2,0,0"/>

                                            <Border Height="18" Background="Transparent"/>

                                            <!-- Footer tip -->
                                            <Border CornerRadius="14"
                    Background="#12FFFFFF"
                    BorderBrush="#22FFFFFF"
                    BorderThickness="1"
                    Padding="14">
                                                <TextBlock Text="Tip: speak naturally. Try “volume to 35%”, “open chrome”, “close telegram”, or “switch window”."
                           Foreground="{StaticResource TextMuted}"
                           FontSize="14"
                           TextWrapping="Wrap"/>
                                            </Border>

                                        </StackPanel>
                                    </Border>
                                </Grid>
                                <!-- ===== CONTACTS PAGE ===== -->
                                <Grid x:Name="ContactsPage" Visibility="Collapsed" Margin="48,36,48,36">
                                    <Border CornerRadius="22"
            Background="#0EFFFFFF"
            BorderBrush="#22FFFFFF"
            BorderThickness="1"
            Padding="26">

                                        <StackPanel>

                                            <TextBlock Text="CONTACT"
                       FontFamily="Segoe UI"
                       FontWeight="SemiBold"
                       FontSize="28"
                       Foreground="{StaticResource TextPrimary}"
                       Margin="0,0,0,6"/>

                                            <TextBlock Text="Ideas, feature requests, or feedback are welcome."
                       FontSize="16"
                       Opacity="0.88"
                       Foreground="{StaticResource TextMuted}"
                       Margin="0,0,0,14"/>

                                            <Border CornerRadius="14"
                    Background="#12FFFFFF"
                    BorderBrush="#22FFFFFF"
                    BorderThickness="1"
                    Padding="16">

                                                <StackPanel>

                                                    <TextBlock Text="Email"
                               FontSize="13"
                               Opacity="0.85"
                               Foreground="{StaticResource TextMuted}"
                               Margin="0,0,0,8"/>

                                                    <!-- clickable email -->
                                                    <TextBlock FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimary}">
                        <Hyperlink NavigateUri="mailto:aidysup@mail.ru?subject=AIDY%20Feedback"
                                   RequestNavigate="Hyperlink_RequestNavigate"
                                   TextDecorations="{x:Null}">
                            <Run Text="aidysup@mail.ru"/>
                        </Hyperlink>
                                                    </TextBlock>

                                                    <TextBlock Text="AIDY is currently available for Windows."
                               FontSize="13"
                               Opacity="0.85"
                               Foreground="{StaticResource TextMuted}"
                               Margin="0,10,0,0"
                               TextWrapping="Wrap"/>

                                                </StackPanel>
                                            </Border>

                                            <!-- optional: small hint -->
                                            <TextBlock Text="Click the email to open your default mail app."
                       FontSize="13"
                       Opacity="0.75"
                       Foreground="{StaticResource TextMuted}"
                       Margin="0,12,0,0"/>

                                        </StackPanel>
                                    </Border>
                                </Grid>




                                <!-- ===== SETTINGS PAGE ===== -->
                                <Grid x:Name="SettingsPage" Visibility="Collapsed" Margin="48,36,48,36">
                                    <Border CornerRadius="22"
            Background="#0EFFFFFF"
            BorderBrush="#22FFFFFF"
            BorderThickness="1"
            Padding="26">
                                        <StackPanel>
                                            <TextBlock Text="SETTINGS"
                       FontFamily="Segoe UI"
                       FontWeight="SemiBold"
                       FontSize="28"
                       Foreground="{StaticResource TextPrimary}"
                       Margin="0,0,0,6"/>
                                            <TextBlock Text="Soon…"
                       FontSize="16"
                       Opacity="0.82"
                       Foreground="{StaticResource TextMuted}"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                            </Grid>
                            <!-- Content -->
                        </Grid>
                        <!-- Grid Grid.Column="1" -->
                    </Grid>
                    <!-- Inner grid inside main Border (the one with 2 columns) -->
                </Border>
                <!-- Main window Border -->
            </Grid>
            <!-- Grid inside Viewbox -->
        </Viewbox>
    </Grid>
    <!-- Root -->
</Window>

